# NOC mongod-arbiter.conf


storage:
  dbPath: {{ noc_root }}/var/db/mongo-arbiter
  journal:
    enabled: false
  engine: {{ mongod_engine }}

systemLog:
  verbosity: 0
  destination: file
  logAppend: true
  path: {{ mongo_arbiter_log_path }}

net:
  port: 27018
  bindIp: 127.0.0.1,{{ mongo_listen_addr }}

processManagement:
  fork: {{ mongo_fork }}
  pidFilePath: {{ mongo_arbiter_pid }}

security:
  keyFile: {{ mongo_dir }}/mongo.key
  clusterAuthMode: keyFile
  authorization: enabled

replication:
  replSetName: {{ mongod_rs }}

